<!DOCTYPE html>
<html>

<head>
  <%~ includeFile('../partials/shared/head', it); %>
</head>

<body>
  <%~ includeFile('../partials/shared/navbar', it); %>
  <div class="container">
    <div class="bg-light p-5 rounded">
      <h1><%= it.title %></h1>
      <p class="lead"><%= it.intro %></p>
      <a class="btn btn-lg btn-primary" href="/docs/5.0/components/navbar/" role="button">View navbar docs Â»</a>
    </div>

    <hr>
    <h2 class="pb-2">Notifications</h2>
    <% if(typeof it.threads != 'undefined'){ %>
    <div class="controls">
      <% for (var i = 0; it.threads.length> 0 && i < it.threads.length ; i++) { %>
      <button type="button" class="btn btn-primary" data-filter="._<%=it.threads[i]%>"><%=it.threads[i]%>...</button>
      <% } %>
    </div>
    <% } %>
    <% if(typeof it.notifications != 'undefined'){ %>
    <div class="mixitup_container row align-items-stretch notifications">
      <% for (var i = 0; it.notifications.length> 0 && i < it.notifications.length ; i++) { %>
      <div class="h-100 pb-3 thread" id="<%= it.notifications[i]._id %>">
        <div class="mix card mb-3 h-100 _<%= it.notifications[i].thread %> <%= it.notifications[i].direction %>">
          <div class="card-body d-flex flex-wrap align-content-between">
            <div class="fa fa-paper-plane <%= it.notifications[i].direction === 'receiver' && 'fa-rotate-180' %>" id="<%= it.notifications[i]._id %>"></div>
            <p class="card-text w-100 text-truncate mb-1" dir="auto"><%- it.notifications[i].message %></p>
            <code class="w-100" style="font-size:0.75rem"><%= it.notifications[i].peer %> | <a href="/listings/id/<%=it.notifications[i].threadId%>/"><%=it.notifications[i].thread%></a> | <%= new Date(parseInt(it.notifications[i]._id.toString().substring(0, 8), 16) * 1000).toISOString().slice(0,10) %></code>
            <details style="margin: 2rem;">
              <summary class="text-dark">Respond</summary>
              <form class="respond" action="/listings/sendmessage" method="POST" name="sendMessage">
                <div class="mb-3">
                  <label for="message">Message</label>
                  <textarea name="message" class="add" id="message" value="" type="text" rows="3"></textarea>
                </div>
                <% if(it.notifications[i].direction === 'receiver'){ %>
                <input type="hidden" value="<%= it.notifications[i].from %>" name="email">
                <% } else { %>
                <input type="hidden" value="<%= it.notifications[i].to %>" name="email">
                <% } %>
                <input type="hidden" name="id" value='<%= it.notifications[i].threadId %>'>

                <div class="w-100">
                  <button type="submit">Send</button>
                </div>
              </form>
            </details>
          </div>
        </div>
      </div>


      <% } %>
    </div>
    <% } %>
    <%~ includeFile('../partials/conf/prepare_js', it); %>
    <%~ includeFile('../partials/shared/footer'); %>
  </div>
  <%~ includeFile('../partials/conf/beforebodyclose', it); %>
  <script>
    {
      if (window.__context__ === 'messages') {
        const scriptElement = document.createElement("script")
        scriptElement.src = "/javascripts/biglistings/biglists.js"
        document.body.appendChild(scriptElement)
      }
    }
  </script>
</body>

</html>