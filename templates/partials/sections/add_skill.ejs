<% if(typeof section != 'undefined' && section == 'skills'){ %>
<style>
  /* This interfers with leaflet, so no leaflet in Art section */
  .injected-svg {
    height: 10rem;
    width: 10rem;
    position: relative;
  }
</style>
<link rel="stylesheet" href="/stylesheets/unversioned/simpleLightbox.min.css">
<br>
<hr>
<details>
  <summary class="text-dark" data-trans="skill-page.add">Add a Skill</summary>
  <h2 class="text-dark hidden" data-trans="skill-page.add">Add a Skill</h2>
  <div id="editor" class="pell" data-target="#unique_target" data-max="500"></div>
  <div id="characters-left"></div>
  <div id="font-picker" class="w-100 sm:w-auto" style="box-shadow:none;"></div>
  <!-- <details class="px-0">
    <summary class="text-dark mx-0 mb-0" style="border-bottom:none">HTML output</summary>
    <div class="text-dark" style="min-height:25px;" id="html-output" style="white-space:pre-wrap;"></div>
  </details> -->
  <form class="p-3" action="/listings/skills" method="POST" name="addSkill">
    <div class="form-group w-100 py-2">
      <input name="title" id="title" class="add w-100 py-1" value="" placeholder="Title">
    </div>
    <div class="w-100 my-auto py-1">
      <label class="text-dark" for="offer" data-trans="(offer)">Offer ?</label>
      <input type="checkbox" class="query m-1" name="offer" id="offer">
    </div>
    <div class="form-group w-100 py-2">
      <div class="w-100"><b data-trans="tag-language">Tag language: </b></div>
      <div class="d-flex justify-content-between">
        <div>
          <input type="radio" class="tags-lang" id="english" name="tags-lang" value="en-US" />
          <label for="english" data-trans="(english)">English</label>
        </div>
        <div>
          <input type="radio" class="tags-lang" id="arabic" name="tags-lang" value="ar" />
          <label for="arabic" data-trans="(arabic)">Arabic</label>
        </div>
        <div>
          <input type="radio" class="tags-lang" id="french" name="tags-lang" value="fr" />
          <label for="french" data-trans="(french)">French</label>
        </div>
      </div>
      <div class="w-100">
        <a href="/tags" target="_blank" rel="noreferrer noopener" data-trans="choose-tags">
          Click here to choose tags
        </a>
        <input class="w-100 py-1" name='tags' id='skills' placeholder="Tags">
      </div>
    </div>
    <div>
      <input name="font" id="font" value='Open Sans' type="hidden">
      <!-- TODO: resolve repeated id (in add ) -->
      <input name="desc" id="description" class="add" value="description..." type="hidden">
    </div>
    <div class="form-group py-2" id="undraw-input" style="display: flow-root;">
      <label for="illu_q">Or you can choose an illustration</label>
      <input class="w-100 py-1" name="illu_q" id="autoComplete-illu" value="" placeholder="Keywords (@_@)">
      <div id="parent">You can change the color ðŸ”—</div>
    </div>
    <input name="undraw" id="undraw" value='' type="hidden">
    <input name="color" id="color" value='' type="hidden">
    <input name="section" value='skills' type="hidden">
    <div>
      <button class="btn btn-primary w-100 py-2 sm:w-auto sm:py-1">Add listing</button>
    </div>
  </form>
</details>
<script>
  {
    const scriptElement = document.createElement("script")
    scriptElement.src = "/javascripts/skills.js"
    document.body.appendChild(scriptElement)
  }
</script>
<% } %>