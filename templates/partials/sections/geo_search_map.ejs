<% if(typeof section != 'undefined' && (section == 'donations' || section == 'skills')){ %>
<details open="">
  <summary class="text-dark" data-trans="(.search)">Geolocation Search</summary>
  <h2 class="hidden" data-trans="(.fuzzysearch)">Geolocation search</h2>
  <div class="map" id="geo-search-map"></div>
  <form class="p-0" action="/listings/geolocation" method="POST" name="queryGeolocation">
    <input type="hidden" type="number" id="lat3" name="lat">
    <input type="hidden" type="number" id="lng3" name="lng">
    <input type="hidden" name="section" value='<%=section%>'>
    <button class="btn btn-primary w-100" data-trans="(.search)">Search</button>
  </form>
</details>
<% } %>